#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

export WD=$PWD

for x in "$WD/bin" "$WD/build"; do
    if [ ! -d "$x" ]; then
        mkdir "$x"
    fi
done

alias clang-format="clang-format -verbose -i"
